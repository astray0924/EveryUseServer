<% @user_session = UserSession.new %>

<%= form_for @user_session, :html => {:class => "navbar-form pull-right"} do |f| %>
	<%= f.label :username, :style => "display: none;" %>
	<%= f.text_field :username, {:placeholder => 'E-mail', :class => 'input-small'} %>
	
	<%= f.label :password, :style => "display: none;" %>
	<%= f.password_field :password, {:placeholder => 'Password', :class => 'input-small'} %>
	
	<%= f.submit 'Log-in', :class => 'btn btn-small btn-danger' %>
	<%= link_to 'Sign-up', new_user_path, :class => 'btn btn-small btn-inverse' %>

<!-- 
	<br>
	<%= f.label :remember_me, :style => 'display: inline;' %>
	<%= f.check_box :remember_me %> -->
	<%= link_to 'Forgot password?', new_password_reset_path, :class => 'btn btn-link', :style => "font-size: 0.9em;" %>
<% end %>