<!DOCTYPE html>
<html>
	<head>
		<title>EveryUse</title>
		<%= stylesheet_link_tag    "application", :media => "screen" %>
		<%= csrf_meta_tags %>
		<%= yield :head %>
	</head>
	<body>
		<div class="container">
			<!--
			<div id="nav">
			<%= link_to "Use Cases", use_cases_path %>
			<%= link_to "Search", search_path %> |
			<%= link_to "Users", users_path %>
			<% if current_user %>
			<%= link_to "Edit Profile", edit_user_path(current_user.id)%>
			<%= link_to "Logout", :logout%>
			<%= "Welcome! " + current_user.username %>
			<% else %>
			<%= link_to "Register", new_user_path%>
			<%= link_to "Login", :login %>
			<% end %>

			</div>
			-->
			<div class="navbar">

				<div class="navbar-inner">
					<ul class="nav">
						<li>
							<%= nav_link "Home", main_index_path %>
						</li>
						<li>
							<%= nav_link 'About', about_index_path %>
						</li>
						<li>
							<%= nav_link 'View', use_cases_path %>
						</li>
					</ul>
					<% unless current_user %>
					<form class="navbar-form pull-right">
						<input type="text" name="email" placeholder="E-mail" class="input-small">
						<input type="password" name="password" placeholder="Password" class="input-small">

						<button type="submit" class="btn btn-medium btn-danger">
							Log-in
						</button>

						<button type="button" class="btn btn-medium btn-inverse">
							Sign-in
						</button>
					</form>
					<% else %>
					<form class="navbar-form pull-right">
						<button type="button" class="btn btn-medium btn-danger">
							Log-out
						</button>
					</form>
					<% end %>
				</div>

			</div>

			<%= yield %>

			<!-- JavaScripts -->
			<%= javascript_include_tag "http://code.jquery.com/jquery-latest.js" %>
			<%= javascript_include_tag "bootstrap/bootstrap" %>
			<%= javascript_include_tag "application" %>
	</body>
</html>
