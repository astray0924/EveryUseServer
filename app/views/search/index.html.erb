<div class="row">

	<div class="span2">
		<ul class="nav nav-pills nav-stacked" id="search_nav">
			<li>
				<a href="#item">Item</a>
			</li>
			<li>
				<a href="#purpose">Purpose</a>
			</li>

		</ul>
	</div>

	<div class="content span10" data-spy="scroll" data-target="#search_nav" data-offset="0">
		<form class="form-search" action="<%= search_path %>" method="get" style="width: 400px; margin: 0 auto; position: relative; left: 60px;">
			<input type="text" name="q" class="input-medium search-query">
			<button type="submit" class="btn">
				Search
			</button>
		</form>

		<h2 id="item">Search by Item</h2>
		<%= display_usecase_list(@result[:item], 5) %>

		<h2 id="purpose">Search by Purpose</h2>
		<%= display_usecase_list(@result[:purpose], 5) %>
	</div>
</div>