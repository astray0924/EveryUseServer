<div class="row">

	<div class="span2">
		<ul class="nav nav-pills nav-stacked">
			<li class="active">
				<a href="#item">Item</a>
			</li>
			<li>
				<a href="#purpose">Purpose</a>
			</li>

		</ul>
	</div>

	<div class="content row span10">
		<form class="form-search" action="<%= search_path %>" method="get" style="width: 400px; margin: 0 auto; position: relative; left: 60px;">
			<input type="text" class="input-medium search-query">
			<button type="submit" class="btn">
				Search
			</button>
		</form>

		<h2 id="item">Search by Item</h2>
		<%= display_usecase_list(UseCase.all[1, 10]) %>

		<h2 id="purpose">Search by Purpose</h2>
	</div>
</div>
