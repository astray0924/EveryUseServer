<h1>Search#Index</h1>
<form action="<%= search_path %>" method="get">
	<input type="search" name="q" />
	<input type="submit" value="Search" />
</form>

<h2>Search by Item</h2>
<% if not @result[:item].blank? %>
<% @result[:item].each do |use_case| %>
<p>
	<%= use_case.as_json nil %>
</p>
<% end %>
<% end %>

<h2>Search by Purpose</h2>
<% if not @result[:item].blank? %>
<% @result[:purpose].each do |use_case| %>
<p>
	<%= use_case.as_json nil %>
</p>
<% end %>
<% end %>
