<!-- 캐치프레이즈-->
<div class="hero-unit">
	<h1 style="color: #ed3a7a;">EVERYUSE</h1>
	<h2 style="color: #3b3b3b;"> Share Your Creative Uses! </h2>
	<p style="color: #3b3b3b;">
		We often use one object to many different purpose
		<br>
		Now Share your own creative uses through EveryUse
	</p>
	<!-- <p>
	<a class="btn btn-primary btn-large"> Learn more </a>
	</p> -->
</div>

<div class="row">
	<div id="myCarousel" class="carousel slide span10 offset1" data-interval="5000" style="margin-bottom: 0;">
		<!-- Carousel items -->
		<div class="carousel-inner">
			<% @carousel_list.each_with_index do |use_case, index| %>
			<div class="item <%= index == 1 ? 'active' : '' %>">
				<%= image_tag use_case.photo.url(:large), :width => '400', :height => '400' %>
				<div class="carousel-caption">
					<h4>First Thumbnail label</h4>
					<p>
						<%= "#{use_case}" %>
					</p>
				</div>
			</div>
			<% end %>
		</div>

		<!-- Carousel nav -->
		<a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
		<a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
	</div>
</div>

<!-- 앱 소개 패널 -->
<div class="row" style="margin-top: 0;">
	<div class="span10 offset1" style="height: 100px; background-color: #3d3d3d;">
		<div class="row" style="height: 100%;">
			<!-- Mobile app -->
			<div class="span5" style="position: relative; padding: 1.8em 0 0 0;">
				<a href="https://play.google.com/store/apps/details?id=org.everyuse.android&feature=nav_result#?t=W251bGwsMSwxLDMsIm9yZy5ldmVyeXVzZS5hbmRyb2lkIl0." 
					style="width: 50px; height: 50px; display: inline; position: absolute; margin-left: 35px"> <%= image_tag 'icon-app-download.png' %> </a>
				<p style="color: white; font-size: 24pt; margin-left: 100px;">
					Download Mobile App
				</p>
				<p style="color: #e7685d; font-size: 16pt; margin-left: 100px;">
					Install EveryUse to Your mobile phone!
				</p>
			</div>

			<!-- Search Form -->
			<div class="span5" style="position: relative;">
				<%= image_tag 'icon-search.png', :style => "position: absolute; width: 50px; height: 50px; background: url('../icon-search.png') center no-repeat; margin-top: 25px;" %>
				<h3 style="color: white; margin-bottom: 0; margin-left: 60px;"> Search Use! </h3>
				<form class="form-search" style="margin-left: 60px;" method="get" action="#">
					<div class="input-prepend">
						<button type="submit" class="btn">
							Search
						</button>
						<input type="text" name="q" class="span2 search-query">
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<!-- Top panel -->
<h2 style="color: #ed3a7a;"><strong>TOP</strong> Ranked Uses</h2>

<div class="row">
	<div class="span6">
		<table class="table table-hover">
			<tr>
				<th colspan="3" style="color: #ffffff; background-color: #ed3a7a;">Wow</th>
			</tr>
			<% @wow_list.each do |use_case| %>
			<tr>
				<td class="usecase-thumbnail-container" style="width: 100px; height: 100px;"><%= image_tag use_case.photo.url(:thumb), :class => "usecase-photo-thumb" %></td>
				<td class="usecase-title-container"><span class="usecase-title"> <%= "#{use_case}" %></span>
				<br>
				<span> <%= "by #{use_case.user.username} #{use_case.get_date}"%> </span></td>
				<td class="usecase-comment-count" style="width: 100px; height: 100px; padding: 0;"><span><%= use_case.wows_count %></span></td>
			</tr>
			<% end %>

		</table>
	</div>
	<div class="span6">
		<table class="table table-hover">
			<tr>
				<th colspan="3" style="color: #ffffff; background-color: #ed3a7a;">Metoo</th>
			</tr>
			<% @metoo_list.each do |use_case| %>
			<tr>
				<td class="usecase-thumbnail-container" style="width: 100px; height: 100px;"><%= image_tag use_case.photo.url(:thumb), :class => "usecase-photo-thumb" %></td>
				<td class="usecase-title-container"><span class="usecase-title"> <%= "#{use_case}" %></span>
				<br>
				<span> <%= "by #{use_case.user.username} #{use_case.get_date}" %> </span></td>
				<td class="usecase-comment-count" style="width: 100px; height: 100px; padding: 0;"><span><%= use_case.metoos_count %></span></td>
			</tr>
			<% end %>

		</table>
	</div>
</div>
</div>